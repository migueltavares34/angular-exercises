/* To learn more about Typescript configuration file: https://www.typescriptlang.org/docs/handbook/tsconfig-json.html. */
/* To learn more about Angular compiler options: https://angular.dev/reference/configs/angular-compiler-options. */
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "types": [],
    "plugins": [{ "name": "typescript-strict-plugin" }],

    "module": "ES2022",
    "moduleResolution": "node",
    "lib": ["ESNext", "DOM"],

    "baseUrl": "./",
    "declaration": false,
    "pretty": false,
    "sourceMap": true,
    "importHelpers": true,

    "paths": {
      "core-js/es7/reflect": ["node_modules/core-js/proposals/reflect-metadata"]
    },

    "strict": false,
    "noPropertyAccessFromIndexSignature": false,
    "useDefineForClassFields": false,

    // Both decoratator rules need to be true to make angular's DI work together
    // with consistent type imports.
    // https://typescript-eslint.io/rules/consistent-type-imports/
    // More explanation: https://github.com/typescript-eslint/typescript-eslint/issues/2559
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/**/*.spec.ts"
  ]
}
